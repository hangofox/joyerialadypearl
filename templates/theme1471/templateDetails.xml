  <languages folder="language">
    <language tag="en-GB">en-GB/en-GB.tpl_theme1471.ini</language>
    <language tag="en-GB">en-GB/en-GB.tpl_theme1471.sys.ini</language>
  </languages>
  <config>
    <fields name="params">
      <fieldset name="layout" label="TPL_FIELDSET_LAYOUT">

        <field name="themeLayout" class="btn-group" type="radio" default="0" label="TPL_THEME_LAYOUT_LABEL" description="TPL_THEME_LAYOUT_DESC">
          <option value="0">TPL_FIXED</option>
          <option value="1">TPL_FLUID</option>
        </field>

        <field name="logoFile" class="" type="media" default=""
          label="TPL_THEME_LOGO_LABEL"
          description="TPL_THEME_LOGO_DESC"/>

        <field name="logoBlockWidth"
          type="integer"
          first="1"
          last="12"
          step="1"
          label="TPL_LOGO_WIDTH"
          description="TPL_LOGO_WIDTH_DESC"/>

        <field type="spacer" label="TPL_SPACER_ASIDES_LABEL" description="TPL_SPACER_ASIDES_DESC"></field>

        <field name="asideLeftWidth" 
          type="integer" 
          first="1" 
          last="12" 
          step="1" 
          label="TPL_THEME_ASIDE_LEFT_WIDTH" 
          description="TPL_THEME_ASIDE_LEFT_WIDTH_DESC"/>    

        <field name="asideRightWidth" 
          type="integer" 
          first="1" 
          last="12" 
          step="1" 
          label="TPL_THEME_ASIDE_RIGHT_WIDTH" 
          description="TPL_THEME_ASIDE_RIGHT_WIDTH_DESC"/>
      </fieldset>

      <fieldset name="typography" label="TPL_FIELDSET_TYPOGRAPHY">

