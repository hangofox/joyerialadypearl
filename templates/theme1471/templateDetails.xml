            <option value="h1">h1</option>
            <option value="h2">h2</option>
            <option value="h3">h3</option>
            <option value="h4">h4</option>
            <option value="h5">h5</option>
            <option value="h6">h6</option>  
            <option value="p">p</option>          
          </field>

        <field type="spacer" label="TPL_SPACER_BLOG_TYPO_LABEL" description="TPL_SPACER_BLOG_TYPO_DESC"></field>
          <field name="blogPageHeading"
            type="list"
            default="h1"
            label="TPL_PAGE_HEADING_LABEL"
            description="TPL_PAGE_HEADING_DESC">
            <option value="h1">h1</option>
            <option value="h2">h2</option>
            <option value="h3">h3</option>
            <option value="h4">h4</option>
            <option value="h5">h5</option>
            <option value="h6">h6</option>  
            <option value="p">p</option>          
          </field>
