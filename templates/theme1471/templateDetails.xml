      </fieldset>

      <fieldset name="features" label="TPL_FIELDSET_FEATURES">
        <field
          name="totop"
          type="list"
          default="1"
          label="TPL_THEME_TOTOP"
          description="TPL_THEME_TOTOP_DESC">
            <option value="0">hide</option>
            <option value="1">show</option>
        </field>

        <field
